# IRIS v6.0 - Environment Configuration
# Säker version utan riktiga API-nycklar

# =============================================================================
# GRUNDINSTÄLLNINGAR
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# DATABAS
# =============================================================================
DATABASE_URL=sqlite:///./data/iris-dev.db

# =============================================================================
# CACHE (REDIS)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_DEFAULT=3600

# =============================================================================
# AI OCH GROQ/xAI KONFIGURATION
# =============================================================================
# Groq Cloud API (primär för snabb profil med Kimi K2)
GROQ_API_KEY=din-groq-api-nyckel-här
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_TIMEOUT=10
GROQ_MODEL_DEFAULT=moonshotai/kimi-k2-instruct-0905

# xAI Grok API (för smart profil, fallback)
XAI_API_KEY=din-xai-api-nyckel-här
XAI_BASE_URL=https://api.x.ai/v1
XAI_TIMEOUT=30

# =============================================================================
# SVENSKA API:ER
# =============================================================================
# NewsData.io för svenska nyheter (valfritt)
NEWS_API_KEY=din-newsdata-api-nyckel-här

# =============================================================================
# GDPR OCH SÄKERHET
# =============================================================================
GDPR_ENABLED=true
DATA_RETENTION_DAYS=30

# Säkerhetsnycklar (ÄNDRA I PRODUKTION!)
SECRET_KEY=iris-dev-key-change-in-production

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# LOKALISERING
# =============================================================================
DEFAULT_LANGUAGE=sv
TIMEZONE=Europe/Stockholm
